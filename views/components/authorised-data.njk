{% from "govuk/components/tag/macro.njk" import govukTag %}
{% from "govuk/components/table/macro.njk" import govukTable %}

{% macro authorisedDataSummaryCard(title, rows) %}
  <div class="govuk-summary-card">
    <div class="govuk-summary-card__title-wrapper">
      <h2 class="govuk-summary-card__title">{{ title }}</h2>
    </div>
    <div class="govuk-summary-card__content">
      {{ govukTable({
        classes: "govuk-table govuk-!-margin-bottom-0",
        firstCellIsHeader: false,
        head: [
          { text: "Data type" },
          { text: "User interface" },
          { text: "API" }
        ],
        rows: rows
      }) }}
    </div>
  </div>
{% endmacro %}


{% macro booleanTag(value) %}
  {% if value %}
    {{ govukTag({ text: "Yes", classes: "govuk-tag--turquoise" }) }}
  {% else %}
    {{ govukTag({ text: "No", classes: "govuk-tag--red" }) }}
  {% endif %}
{% endmacro %}


{% macro addFields(dataset, fields, orgInfo) %}
  {% set flsList = orgInfo.flsSchema[dataset] or [] %}

  {% for key, section in fields[dataset] %}
    {% set rows = [] %}
    {% for field in section.fields %}
      {% set status = {} %}
      {% for item in flsList %}
        {% if item.field == field.path %}
          {% set status = item %}
        {% endif %}
      {% endfor %}

      {% set row = [
        { text: field.label },
        { text: booleanTag(status.ui), classes: "govuk-!-width-one-quarter" },
        { text: booleanTag(status.api), classes: "govuk-!-width-one-quarter" }
      ] %}
      {% set rows = rows | push(row) %}
    {% endfor %}
    {{ authorisedDataSummaryCard(section.header, rows) }}
  {% endfor %}
{% endmacro %}
